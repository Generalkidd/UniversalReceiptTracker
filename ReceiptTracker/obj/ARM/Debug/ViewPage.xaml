<Page
    x:Class="ReceiptTracker.ViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReceiptTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="receiptPic" HorizontalAlignment="Left" Height="201" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" Visibility="Visible"/>
        <TextBlock x:ConnectionId='2' x:Name="d1" HorizontalAlignment="Left" Margin="19,232,0,0" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top" Visibility="Visible" Width="331"/>
        <TextBlock x:ConnectionId='3' x:Name="d2" HorizontalAlignment="Left" Margin="19,289,0,0" TextWrapping="Wrap" Text="Date: " VerticalAlignment="Top" Visibility="Visible" Width="252"/>
        <TextBlock x:ConnectionId='4' x:Name="d3" HorizontalAlignment="Left" Margin="19,345,0,0" TextWrapping="Wrap" Text="Time: " VerticalAlignment="Top" Visibility="Visible" Width="278"/>
        <TextBlock x:ConnectionId='5' x:Name="d4" HorizontalAlignment="Left" Margin="19,400,0,0" TextWrapping="Wrap" Text="Total: " VerticalAlignment="Top" Visibility="Visible" Width="263"/>
        <TextBlock x:ConnectionId='6' x:Name="d5" HorizontalAlignment="Left" Margin="19,451,0,0" TextWrapping="Wrap" Text="Notes: " VerticalAlignment="Top" Visibility="Visible" Width="321" Height="111"/>
        <Button x:ConnectionId='7' x:Name="closeBtn" Content="Close" HorizontalAlignment="Left" Margin="143,567,0,0" VerticalAlignment="Top" Width="82"                        Visibility="Visible" IsEnabled="False"/>
    </Grid>
</Page>

