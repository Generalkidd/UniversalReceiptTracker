<Page
    x:Class="ReceiptTracker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReceiptTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListBox x:ConnectionId='1' x:Name="receiptsList" HorizontalAlignment="Left" Height="940" Margin="10,10,0,0" VerticalAlignment="Top" Width="774"                                                 >

        </ListBox>
        <Button x:ConnectionId='2' x:Name="quickAddBtn" Content="Quick Add" HorizontalAlignment="Left" Margin="1073,318,0,0" VerticalAlignment="Top"                          />
        <Button x:ConnectionId='3' x:Name="addBtn" Content="Add" HorizontalAlignment="Left" Margin="1073,385,0,0" VerticalAlignment="Top" Width="89"                     />
        <Button x:ConnectionId='4' x:Name="editBtn" Content="Edit" HorizontalAlignment="Left" Margin="1240,318,0,0" VerticalAlignment="Top" Width="89"                      />
        <Button x:ConnectionId='5' x:Name="deleteBtn" Content="Delete" HorizontalAlignment="Left" Margin="1240,385,0,0" VerticalAlignment="Top" Width="89"                        />
        <Image x:ConnectionId='6' x:Name="receiptPic" HorizontalAlignment="Left" Height="380" Margin="367,10,0,0" VerticalAlignment="Top" Width="380" Visibility="Visible"/>
        <CaptureElement x:ConnectionId='7' x:Name="capturePreview" HorizontalAlignment="Left" Height="380" Margin="367,10,0,0" VerticalAlignment="Top" Width="380" Visibility="Collapsed"/>
        <Button x:ConnectionId='8' x:Name="captureBtn" Content="Capture" HorizontalAlignment="Left" Margin="522,407,0,0" VerticalAlignment="Top"                          Visibility="Collapsed"/>
        <TextBox x:ConnectionId='9' x:Name="rName" HorizontalAlignment="Left" Margin="437,413,0,0" TextWrapping="Wrap" Text="Receipt Name" VerticalAlignment="Top" Height="20" Width="310" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='10' x:Name="d1" HorizontalAlignment="Left" Margin="367,413,0,0" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top" Visibility="Collapsed"/>
        <DatePicker x:ConnectionId='11' x:Name="rDate" HorizontalAlignment="Left" Margin="437,470,0,0" VerticalAlignment="Top" Width="310" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='12' x:Name="d2" HorizontalAlignment="Left" Margin="367,470,0,0" TextWrapping="Wrap" Text="Date: " VerticalAlignment="Top" Visibility="Collapsed"/>
        <TimePicker x:ConnectionId='13' x:Name="rTime" HorizontalAlignment="Left" Margin="437,524,0,0" VerticalAlignment="Top" Height="33" Width="310" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='14' x:Name="d3" HorizontalAlignment="Left" Margin="367,526,0,0" TextWrapping="Wrap" Text="Time: " VerticalAlignment="Top" Visibility="Collapsed"/>
        <TextBox x:ConnectionId='15' x:Name="rTotal" HorizontalAlignment="Left" Margin="437,577,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Height="20" Width="310" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='16' x:Name="d4" HorizontalAlignment="Left" Margin="365,583,0,0" TextWrapping="Wrap" Text="Total: " VerticalAlignment="Top" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='17' x:Name="d5" HorizontalAlignment="Left" Margin="365,631,0,0" TextWrapping="Wrap" Text="Notes: " VerticalAlignment="Top" Visibility="Collapsed"/>
        <RichEditBox x:ConnectionId='18' x:Name="rNotes" HorizontalAlignment="Left" Margin="437,631,0,0" VerticalAlignment="Top" Height="101" Width="310" Visibility="Collapsed"/>
        <Button x:ConnectionId='19' x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="487,762,0,0" VerticalAlignment="Top"                       Width="82" Visibility="Collapsed"/>
        <Button x:ConnectionId='20' x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="592,762,0,0" VerticalAlignment="Top" Width="81"                         Visibility="Collapsed"/>
        <Button x:ConnectionId='21' x:Name="closeBtn" Content="Close" HorizontalAlignment="Left" Margin="487,874,0,0" VerticalAlignment="Top" Width="82"                        Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='22' x:Name="textBlock" HorizontalAlignment="Left" Margin="994,170,0,0" TextWrapping="Wrap" Text="Receipt Tracker" VerticalAlignment="Top" FontSize="64"/>
    </Grid>
</Page>

